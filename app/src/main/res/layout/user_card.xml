<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/frame_profile"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#C1C1C1"
        app:cardCornerRadius="250dp"
        android:layout_marginLeft="2dp">

        <ImageView
            android:id="@+id/profile_view_card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_person_default" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_centerVertical="true"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/frame_profile"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/frame_profile"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/online_status"
    android:layout_width="15dp"
    android:layout_height="15dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="38dp"
    android:layout_marginTop="38dp"
    android:visibility="invisible" />
</RelativeLayout>